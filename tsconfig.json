{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./builddir",
    "moduleResolution": "node",
    "noEmitOnError": true
  },
  "paths": {
    "*": ["node_modules/*"],
    "app/*": ["app/*"]
},
  "include": [
    "./**/*.ts",
    "./**/*.js"
  ]
}
